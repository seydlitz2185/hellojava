<?xml version="1.0" encoding="UTF-8"?>
<!--suppress WebProperties -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>registe</servlet-name>
        <servlet-class>RegisteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registe</servlet-name>
        <url-pattern>/regist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>loginAuth</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginAuth</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningPush</servlet-name>
        <servlet-class>DiningServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningPush</servlet-name>
        <url-pattern>/dining</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningFetchOne</servlet-name>
        <servlet-class>DiningFetchOneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningFetchOne</servlet-name>
        <url-pattern>/diningFetchOne</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningFetchPage</servlet-name>
        <servlet-class>DiningFetchPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningFetchPage</servlet-name>
        <url-pattern>/diningFetchPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningOrderServlet</servlet-name>
        <servlet-class>DiningOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningOrderServlet</servlet-name>
        <url-pattern>/diningOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningFetchUser</servlet-name>
        <servlet-class>DiningFetchUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningFetchUser</servlet-name>
        <url-pattern>/diningFetchUserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningFetchUserOrder</servlet-name>
        <servlet-class>DiningFetchUserOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningFetchUserOrder</servlet-name>
        <url-pattern>/diningFetchUserOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningOrderFetchUser</servlet-name>
        <servlet-class>DiningOrderFetchUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningOrderFetchUser</servlet-name>
        <url-pattern>/diningOrderFetchUserServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningUserCancelUser</servlet-name>
        <servlet-class>DiningUserCancelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningUserCancelUser</servlet-name>
        <url-pattern>/diningUserCancelServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningOrderFinishUser</servlet-name>
        <servlet-class>DiningOrderFinishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningOrderFinishUser</servlet-name>
        <url-pattern>/diningOrderFinishServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>diningProxyPickCancelServlet</servlet-name>
        <servlet-class>DiningProxyPickCancelServlet </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>diningProxyPickCancelServlet</servlet-name>
        <url-pattern>/diningProxyPickCancelServlet </url-pattern>
    </servlet-mapping>

    <!-- 过滤器声明 -->
    <filter>
        <!-- 过滤器的名称 -->
        <filter-name>MyFilter</filter-name>
        <!-- 过滤器的完整类名 -->
        <filter-class>Filter.MyFilter</filter-class>
        <!-- 设置初始化参数,本实例中将MyFilter的参数count设置初始值2000
        这种方式类似Java的命令行参数-->
        <init-param>
            <!-- 参数名 -->
            <param-name>count</param-name>
            <!-- 参数值 -->
            <param-value>2000</param-value>
        </init-param>
    </filter>
    <!-- 过滤器映射 -->
    <filter-mapping>
        <!-- 过滤器名称 -->
        <filter-name>MyFilter</filter-name>
        <!-- 过滤器URL映射
         把过滤器映射到对应的URL上意味着过滤器作用于这个网页上-->
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/index.html</location>
    </error-page>
</web-app>